<%= render "navbar" %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <%= render @blogs %>
      <div class="text-center">
        <%= paginate @blogs %>
      </div>
    </div>
    <div class="col-md-4 text-end">
      <%= form_with url: search_path, class: "form-inline my-2 my-lg-0", method: "get" do |form| %>
        <%= form.text_field :key, placeholder: "Search", class: "form-control", required: true %>
        <%= form.select :option, ["User", "Blog"], selected: "Blog", class: "form-control" %>
        <%= form.submit "Search", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>

