<%= render "blogs/navbar" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">Update your detail</h5>
            <%= form_with url: user_path, model: @current_user, method: "patch" do |form| %>
              <div class="mb-3">
                <%= form.label :username, class: "form-label" %>
                <%= form.text_field :username, class: "form-control", required: true %>
                <% @current_user.errors.full_messages_for(:username).each do |message| %>
                  <b class="text-danger"><%= message %></b>
                <% end %>
              </div>

              <div class="mb-3">
                <%= form.label :email, class: "form-label" %>
                <%= form.text_field :email, class: "form-control", required: true %>
                <% @current_user.errors.full_messages_for(:email).each do |message| %>
                  <b class="text-danger"><%= message %></b>
                <% end %>
              </div>

              <div class="mb-3">
                <%= form.label :password, class: "form-label" %>
                <%= form.password_field :password, class: "form-control", rows: 5, required: true %>
                <% @current_user.errors.full_messages_for(:password).each do |message| %>
                  <b class="text-danger"><%= message %></b>
                <% end %>
              </div>

              <%= form.submit "Submit", class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

