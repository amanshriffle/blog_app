<li class="list-group-item">
  <img src= <%= profile_picture_url(user.profile) %> alt="Author Profile" width="50" height="50" class="rounded-circle me-2">
  <%= link_to user.username, profile_path(user.username), class: "text-secondary link-offset-2 link-underline link-underline-opacity-25" %>
  <% if check_id == @current_user.id %>
  <span class="text-secondary badge">
    <%= link_to btn_text, follow_path + "?id=#{follow.id}", class: "ms-5 btn btn-outline-danger", data: { turbo_method: "delete" }, style: "--bs-btn-padding-y: .30rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .60rem;" %>
  </span><br>
  <% end %>
</li>
